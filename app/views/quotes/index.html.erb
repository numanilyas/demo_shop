<div class="row">
	<div class="span12">

		<h1>Listing quotes</h1>
		
		<table width="100%" class="table table-striped table-bordered table-hover table-condensed">
			<thead>
			  <tr>
			    <th>Width</th>
			    <th>Height</th>
			    <th>Quantity</th>
			    <th>Comments</th>
			    <th>Requiredate</th>
			    <th>Name</th>
			    <th>Email</th>
			    <th>Phone</th>
			    <th>View</th>
			    <th>Delete</th>
			  </tr>
		  </thead>
		  
		  <tbody>
		
		<% @quotes.each do |quote| %>
		  <tr>
		    <td><%= quote.width %></td>
		    <td><%= quote.height %></td>
		    <td><%= quote.quantity %></td>
		    <td><%= quote.comments %></td>
		    <td><%= quote.requiredate %></td>
		    <td><%= quote.name %></td>
		    <td><%= quote.email %></td>
		    <td><%= quote.phone %></td>
		    <td><%= link_to 'Show', quote %></td>
		    <!-- td><%= link_to 'Edit', edit_quote_path(quote) %></td -->
		    <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
			</tbody>
		</table>
		
		<br />
		
		<%= link_to 'New Quote', new_quote_path %>
		
	</div>
</div>
