<% if !params[:page].nil?%>
	<%provide(:title, 'Samples' + " - Page " + params[:page])%>
<%else%>
	<%provide(:title, 'Samples')%>
<% end %>
<% meta :description => "Emblem Embroiders provide embroidery services for Emblems, Crests, Coat of Arms, Bands and any type of custom patch. Please use Free Quote to get started.",
        :keywords => "Handmade Bullion Crests, Heraldry, Emblems, Family Crests, Coat of Arms, Church Embroidery, Christmas Collection, Patches, Clan Crests, Navy Badges, Military Blazer Badges, Masonic Supplies, Uniform Accessories, Flags, Sashes, WW II Items, Bands Uniform"
%>
<h1>Samples</h1>
<hr/>

<p>
	Emblem Embroiders has been providing superior quality services to our customers for more than a decade. Please see below samples pages to get an overview of expertise.  
</p>

<% @sample_products.each do |product| %>
	<a href=<%= samples_path(product)%>><legend><%= product.title %></legend></a>
	<p><%= product.description %></p>
	<p>		  
	  <%= link_to image_tag(product.image.url, :class => "img-polaroid productthumbnail"), samples_path(product) %>		  			
	</p>
<% end %>
<%= will_paginate @sample_products %>

